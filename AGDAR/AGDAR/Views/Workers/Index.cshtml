@model IEnumerable<AGDAR.Models.DTO.WorkerDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Workers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="admin-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeckondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.RoleId)
            </th>
            <th width="15%">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeckondName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleId)
                </td>
            <td class="action-btns">
                <a asp-action="Edit" class="edit-btn" asp-route-id="@item.Id">Edit</a>
                @*<a asp-action="Details" class="details-btn" asp-route-id="@item.Id">Details</a>*@
                <a asp-action="Delete" class="delete-btn" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
