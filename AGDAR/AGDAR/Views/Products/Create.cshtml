@model AGDAR.Models.DTO.CreateProductDto

@{
    ViewData["Title"] = "Create";
}

<h3>Stwórz produkt</h3>

<hr />
<div class="login-containers">
    <div class="register-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Nazwa
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Cena
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                Opis
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                Marka
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
               Stan
                <input asp-for="StateId" class="form-control" value="0" />
                <span asp-validation-for="StateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                Kategorie
                <select asp-for="CategoriesId" class="form-control" multiple>
                    @foreach (var category in (List<SelectListItem>)ViewData["Kategoria"])
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
                <span asp-validation-for="CategoriesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                Zdjęcie
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between pt-2">
                <a asp-controller="Workers" asp-action="Index" class="create-btns h-25">Powrót</a>
                <div class="form-group">
                    <input type="submit" value="Dodaj" class="create-btns" style="border:none" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
