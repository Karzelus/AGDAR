@model AGDAR.Models.DTO.ProductDto

@{
    ViewData["Title"] = "Edit";
}

<h3>Edycja narzędzia</h3>

<hr />
<div class="row justify-content-center">
    <div class="login-container h-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Nazwa
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Cena
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                Opis
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                Marka
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriesId" class="control-label"></label>
                <select asp-for="CategoriesId" class="form-control" multiple>
                    @foreach (var category in (List<SelectListItem>)ViewData["Kategoria"])
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
                <span asp-validation-for="CategoriesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                Zdjęcie
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
            </div>
             <div class="d-flex justify-content-between">
                 <a asp-action="All" class="create-btns h-25 mt-2">Powrót</a>
                <div class="form-group">
                     <input type="submit" value="Zatwierdź" class="create-btns m-2" style="border:none;" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
