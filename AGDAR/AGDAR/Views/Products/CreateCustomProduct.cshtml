@model AGDAR.Models.DTOs.CreateCustomProductDto

@{
    ViewData["Title"] = "CreateCustomProduct";
}

<h1>CreateCustomProduct</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCustomProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartsId" class="control-label"></label>
                <select asp-for="PartsId" class="form-control" multiple>
                    @foreach (var category in (List<SelectListItem>)ViewData["Parts"])
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
                <span asp-validation-for="PartsId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" id="parts">
                    <option value="0">Wybierz opcję</option>
                    <option value="1">Wiertarka</option>
                    <option value="2">Wkrętarka</option>
                    <option value="3">Szlifierka</option>
                    <option value="4">Frezarka</option>
                    <option value="5">Piła</option>
                    <option value="6">Kosiarka</option>
                    <option value="7">Piła tarczowa</option>
                    <option value="8">Wiertnica</option>
                    <option value="9">Piła szablasta</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
