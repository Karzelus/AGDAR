@model IEnumerable<AGDAR.Models.DTO.ProductDto>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor context;

@{
    ViewData["Title"] = "Index";
}
<head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<h1>Produkty</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<main class="d-flex">
    <div class="w-25 filters-product-box" style="line-break: anywhere; height:400px">Tu będą filtry
        @foreach (var category in (List<Category>)ViewData["Kategoria"])
        {
            @category.Name
        }
    </div>
    <div class="w-75 products-boxes" style="line-break: anywhere;">
        <button class="cart-button" onclick="AddToCartPackageDrop()">
            <svg id="cart-icon-button" class="footer-icon cart-icon-button" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512">
                <path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96z" />
            </svg>
            <svg id="package-icon-button" class="footer-icon package-icon-button" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                <path d="M50.7 58.5L0 160H208V32H93.7C75.5 32 58.9 42.3 50.7 58.5zM240 160H448L397.3 58.5C389.1 42.3 372.5 32 354.3 32H240V160zm208 32H0V416c0 35.3 28.7 64 64 64H384c35.3 0 64-28.7 64-64V192z" />
            </svg>
            <div id="products-number">1</div>
        </button>
        @foreach (var item in Model)
        {
            <div class="d-flex product-box @String.Join(" ", item.Categories.Select(c => c.Name))">
                <div>
                    <img src="@Url.Content(item.Img)" alt="Product Image" width="200" height="200" />
                </div>
                <div style="margin-inline-end: auto; padding-left:20px; padding-right:20px; line-break: anywhere;width:50%;overflow:hidden ">
                    <div class="produckt-title">
                        @Html.DisplayFor(modelItem => item.Name)
                    </div>
                    <div class="product-descryption">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                </div>
                <div style="padding-right:20px;">
                    <div class="product-price">
                        @Html.DisplayFor(modelItem => item.Price) zł
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </div>
                    <div>
                        @Html.DisplayFor(modelItem => item.StateId)
                    </div>
                    @*<div>
                        Html.DisplayFor(modelItem => item.Categories)
                        
                    </div>*@
                    @if (@context.HttpContext.Session.GetString("WorkerId") != null)
                    {
                        <div style="display: inline-grid; justify-items: center;">
                            <div>
                                <a asp-action="Edit" class="edit-btn" asp-route-id="@item.Id">Edit</a>
                            </div>
                            <div>
                                <a asp-action="Details" class="details-btn" asp-route-id="@item.Id">Details</a>
                            </div>
                            <div>
                                <a asp-action="Delete" class="delete-btn" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </div>
                    } else
                    {
                        <div style="display:grid">
                            <button class="add-to-cart-button">
                                <svg class="footer-icon" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512">
                                    <path d="M0 24C0 10.7 10.7 0 24 0H69.5c22 0 41.5 12.8 50.6 32h411c26.3 0 45.5 25 38.6 50.4l-41 152.3c-8.5 31.4-37 53.3-69.5 53.3H170.7l5.4 28.5c2.2 11.3 12.1 19.5 23.6 19.5H488c13.3 0 24 10.7 24 24s-10.7 24-24 24H199.7c-34.6 0-64.3-24.6-70.7-58.5L77.4 54.5c-.7-3.8-4-6.5-7.9-6.5H24C10.7 48 0 37.3 0 24zM128 464a48 48 0 1 1 96 0 48 48 0 1 1 -96 0zm336-48a48 48 0 1 1 0 96 48 48 0 1 1 0-96zM252 160c0 11 9 20 20 20h44v44c0 11 9 20 20 20s20-9 20-20V180h44c11 0 20-9 20-20s-9-20-20-20H356V96c0-11-9-20-20-20s-20 9-20 20v44H272c-11 0-20 9-20 20z" />
                                </svg>
                            </button>
                        </div>
                    }
                </div>
            </div>
        }
     </div>
</main>
