@model AGDAR.Models.DTO.ClientDto

@{
    ViewData["Title"] = "CreateClient";
}
<h4>Rejestracja</h4>

<div class="row">
    <div class="login-containers">
        <div class="register-container">
            <form asp-action="CreateClient">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="d-flex">
                    <div class="w-50">
                        <div class="form-group">
                            <label asp-for="Email" class="login-label"></label><br />
                            <input asp-for="Email" class="login-input w-50" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="login-label"></label><br />
                            <input asp-for="Password" class="login-input w-50" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="login-label"></label><br />
                            <input asp-for="ConfirmPassword" class="login-input w-50" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div><br />
                    </div>
                    <div class="w-50">
                        <div class="form-group">
                            <label asp-for="Name" class="login-label"></label><br />
                            <input asp-for="Name" class="login-input w-50" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeckondName" class="login-label"></label><br />
                            <input asp-for="SeckondName" class="login-input w-50" />
                            <span asp-validation-for="SeckondName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="login-label"></label><br />
                            <input asp-for="DateOfBirth" class="login-input w-50" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div><br />
                    </div>
                </div>
                <div class="checkboxes">
                    <div class="d-flex">
                        <input type="checkbox" class="checkbox" />
                        <span class="checkbox-content" style="color:black">Akceptuję Regulamin i Politykę Prywatności *</span>
                    </div>
                    <div class="d-flex">
                        <input type="checkbox" class="checkbox" />
                        <div class="d-flex">
                            <span class="checkbox-content" style="color:black">
                                Chcę być informowany o bieżących promocjach i otrzymywać najnowsze oferty.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" value="Create" class="login-accept-btn">ZAREJESTRUJ SIĘ</button>
                </div>
            </form>
        </div>
        <div class="newsletter-container" style="background-image: url('../images/Tła/newsletter.png');">
            <h4 class="newsletter-title">NEWSLETTER</h4>
            <div class="newsletter-inputs">
                <div class="d-flex">
                    <input placeholder="*Podaj e-mail..." class="newsletter-input" />
                    <input placeholder="*Podaj imię..." class="newsletter-input" />
                </div>
                <div class="checkboxes">
                    <div class="d-flex">
                        <input type="checkbox" class="checkbox" />
                        <span class="checkbox-content">Akceptuję Regulamin i Politykę Prywatności *</span>
                    </div>
                    <div class="d-flex">
                        <input type="checkbox" class="checkbox" />
                        <div class="d-flex">
                            <span class="checkbox-content">
                                Chcę być informowany o bieżących promocjach i otrzymywać najnowsze oferty.
                            </span>
                            <button class="login-accept-btn" style="padding:2px; margin-left:20px;">ZAPISZ SIĘ</button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>