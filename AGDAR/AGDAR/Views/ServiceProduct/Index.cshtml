<div id="all-list-id">
    <h1>Lista</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="w-auto">
                    @Html.DisplayNameFor(model => model.ClientId)
                </th>
                <th class="w-auto">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="w-auto">
                    @Html.DisplayNameFor(model => model.ClientNote)
                </th>
                <th class="w-auto">
                    @Html.DisplayNameFor(model => model.WorkerName)
                </th>
                <th width="15%"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkerName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>


<div id="worker-list-id">
    <h1>Twoje</h1>

    <table class="table">
        <thead>
            <tr>
                <th class="w-auto">
                    @Html.DisplayNameFor(model => model.ClientId)
                </th>
                <th class="w-auto">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="w-auto">
                    @Html.DisplayNameFor(model => model.ClientNote)
                </th>
                <th width="15%"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                    <td class="w-auto">
                    @Html.DisplayFor(modelItem => item.ClientNote)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    function BackFilters()
    {
        $('#all-list-id').show();
        $('#worker-list-id').show();
    }
    function ShowAll()
    {
        $('#all-list-id').show();
        $('#worker-list-id').hide();
    }
    function ShowDirected()
    {
        $('#all-list-id').hide();
        $('#worker-list-id').show();

    }
</script>
