@model AGDAR.Models.DTO.PartDto

@{
    ViewData["Title"] = "Delete";
}

<h3>Usuń tę część</h3>
<hr />
<div>
    <div class="row justify-content-center">
        <div class="login-container h-auto d-grid align-content-between" style="min-height:300px">
            <div>
                <div class="d-flex">
                    <div style="font-weight:700">
                        Nazwa:
                    </div>
                    <div class="ps-3">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
                <div class="">
                    <div style="font-weight:700">
                        Krótki opis:
                    </div>
                    <div class="ps-3">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </div>
                <div class="d-flex">
                    <div style="font-weight:700">
                        Cena:
                    </div>
                    <div class="ps-3">
                        @Html.DisplayFor(model => model.Price) zł
                    </div>
                </div>  
            </div>
            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />
                <a class="create-btns" asp-action="Index">Powrót</a>
                <input type="submit" value="Usuń" class="create-btns float-end" style="border:none" />
            </form>
        </div>
    </div>
</div>
