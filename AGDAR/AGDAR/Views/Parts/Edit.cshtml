@model AGDAR.Models.DTO.PartDto

@{
    ViewData["Title"] = "Edit";
}

<h3>Edytuj dane części</h3>

<hr />
<div class="row justify-content-center">
    <div class="login-container h-auto">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Nazwa
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                Krótki opis
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                Cena
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                Typ części
                <select asp-for="Type" class="form-control" id="parts">
                    <option value="0">Wybierz opcję</option>
                    <option value="1">Głowica</option>
                    <option value="2">Rączka</option>
                    <option value="3">Bateria</option>
                    <option value="4">Osłona</option>
                    <option value="5">Przekładnia</option>
                    <option value="6">Łożysko</option>                 
                    <option value="7">Uchwyt</option>
                    <option value="8">Silnik</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                Typ narzędzia
                <select asp-for="ToolType" class="form-control" id="parts">
                    <option value="0">Wybierz opcję</option>
                    <option value="1">Wiertarka</option>
                    <option value="2">Wkrętarka</option>
                    <option value="3">Szlifierka</option>
                    <option value="4">Frezarka</option>
                    <option value="5">Piła</option>
                    <option value="6">Kosiarka</option>
                    <option value="7">Piła tarczowa</option>
                    <option value="8">Wiertnica</option>
                    <option value="9">Piła szablasta</option>
                </select>
                <span asp-validation-for="ToolType" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="create-btns h-25 mt-2">Powrót</a>
                <div class="form-group float-end">
                    <input type="submit" value="Zatwierdź" class="create-btns m-2" style="border:none;" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
