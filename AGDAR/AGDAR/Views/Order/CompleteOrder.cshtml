@model AGDAR.Models.DTO.OrderDto

@{
    ViewData["Title"] = "Details"; 
    var orderId = @Html.DisplayFor(model => model.Id);
}

<h1>Podsumowanie</h1>

<div>
    <hr />
    <dl class="row">
        <div class="d-flex justify-content-between">
            <div class="d-flex align-items-center">
                <div>
                    Łączna kwota:
                </div>
                <div class="product-price ps-5"> 
                    @Html.DisplayFor(model => model.Price) zł
                </div>
                @if(@Model.Price > 99)
                {
                    <div>
                        Darmowa dostawa
                    </div>
                }
            </div>
            <a class="back-to-product-list-btn" asp-controller="Products" asp-action="Index">
                <svg class="btn-icon" style="margin-inline:auto" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                    <path d="M40 48C26.7 48 16 58.7 16 72v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V72c0-13.3-10.7-24-24-24H40zM192 64c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zm0 160c-17.7 0-32 14.3-32 32s14.3 32 32 32H480c17.7 0 32-14.3 32-32s-14.3-32-32-32H192zM16 232v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V232c0-13.3-10.7-24-24-24H40c-13.3 0-24 10.7-24 24zM40 368c-13.3 0-24 10.7-24 24v48c0 13.3 10.7 24 24 24H88c13.3 0 24-10.7 24-24V392c0-13.3-10.7-24-24-24H40z"/>
                </svg>
                Wróć do zakupów
            </a>
        </div>
        <table class="admin-table">
            <thead>
                <tr>
                    <th class="w-25">
                        Zdjęcie
                    </th>
                    <th>
                        Nazwa
                    </th>
                    <th class="w-25">
                        Cena
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model.Products) {
                <tr>
                    <td>
                         <img src="https://localhost:7167/@Html.DisplayFor(modelItem => item.Img)" alt="Product Image" width="50" height="50" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price) zł
                    </td>
                </tr>
                }
            </tbody>
        </table>
        <a class="back-to-product-list-btn mt-3" style="width:350px;" asp-controller="Order" asp-action="EndOrder" asp-route-orderId="@Model.Id">
            <svg class="btn-icon" style="margin-inline:auto" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 384 512">
                <path d="M64 0C28.7 0 0 28.7 0 64V448c0 35.3 28.7 64 64 64H320c35.3 0 64-28.7 64-64V160H256c-17.7 0-32-14.3-32-32V0H64zM256 0V128H384L256 0zM64 80c0-8.8 7.2-16 16-16h64c8.8 0 16 7.2 16 16s-7.2 16-16 16H80c-8.8 0-16-7.2-16-16zm0 64c0-8.8 7.2-16 16-16h64c8.8 0 16 7.2 16 16s-7.2 16-16 16H80c-8.8 0-16-7.2-16-16zm128 72c8.8 0 16 7.2 16 16v17.3c8.5 1.2 16.7 3.1 24.1 5.1c8.5 2.3 13.6 11 11.3 19.6s-11 13.6-19.6 11.3c-11.1-3-22-5.2-32.1-5.3c-8.4-.1-17.4 1.8-23.6 5.5c-5.7 3.4-8.1 7.3-8.1 12.8c0 3.7 1.3 6.5 7.3 10.1c6.9 4.1 16.6 7.1 29.2 10.9l.5 .1 0 0 0 0c11.3 3.4 25.3 7.6 36.3 14.6c12.1 7.6 22.4 19.7 22.7 38.2c.3 19.3-9.6 33.3-22.9 41.6c-7.7 4.8-16.4 7.6-25.1 9.1V440c0 8.8-7.2 16-16 16s-16-7.2-16-16V422.2c-11.2-2.1-21.7-5.7-30.9-8.9l0 0c-2.1-.7-4.2-1.4-6.2-2.1c-8.4-2.8-12.9-11.9-10.1-20.2s11.9-12.9 20.2-10.1c2.5 .8 4.8 1.6 7.1 2.4l0 0 0 0 0 0c13.6 4.6 24.6 8.4 36.3 8.7c9.1 .3 17.9-1.7 23.7-5.3c5.1-3.2 7.9-7.3 7.8-14c-.1-4.6-1.8-7.8-7.7-11.6c-6.8-4.3-16.5-7.4-29-11.2l-1.6-.5 0 0c-11-3.3-24.3-7.3-34.8-13.7c-12-7.2-22.6-18.9-22.7-37.3c-.1-19.4 10.8-32.8 23.8-40.5c7.5-4.4 15.8-7.2 24.1-8.7V232c0-8.8 7.2-16 16-16z"/>
            </svg>
            Sfinalizuj zamówienie i przejdź do płatności 
        </a>

<script>
    function RemoveFromCart(productId, orderId, numerator) {
        // Pobierz ID zamówienia klienta z sesji
        $.ajax({
            url: '/Products/RemoveFromCart',
            type: 'GET',
            data: { productId: productId, orderId: orderId },
            success: function (response) {
            },
        });
        $("[data-product-id='" + numerator + "']").remove();
    }

</script>
