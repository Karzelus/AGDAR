@model AGDAR.Models.DTO.OrderDto

@{
    ViewData["Title"] = "Details"; 
    var orderId = @Html.DisplayFor(model => model.Id);
}

<h1>Details</h1>

<div>
    <h4>OrderDto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            Zawartość koszyka:
        </dt>
        <dd class="col-sm-10">
                @foreach (var product in Model.Products)
                {
                    <div class="cart-item-container" data-product-id="@product.Id">
                        <img src="https://localhost:7167/@product.Img" alt="Product Image" width="200" height="200" />
                        @product.Name
                        @product.Price
                        <div class="w-100">
                            <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="details-btn">
                                <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                                    <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zM216 336h24V272H216c-13.3 0-24-10.7-24-24s10.7-24 24-24h48c13.3 0 24 10.7 24 24v88h8c13.3 0 24 10.7 24 24s-10.7 24-24 24H216c-13.3 0-24-10.7-24-24s10.7-24 24-24zm40-208a32 32 0 1 1 0 64 32 32 0 1 1 0-64z" />
                                </svg>
                                Details
                            </a>
                        </div>
                        <div class="w-100">
                            <button class="delete-btn" onclick="RemoveFromCart(@product.Id,@orderId)">
                                <svg class="btn-icon" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512">
                                    <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z" />
                                </svg>
                                Delete
                            </button>
                        </div>
                    </div>
                    <br />
                }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<script>
    function RemoveFromCart(productId, orderId) {
        // Pobierz ID zamówienia klienta z sesji
        $.ajax({
            url: '/Products/RemoveFromCart',
            type: 'GET',
            data: { productId: productId, orderId: orderId },
            success: function (response) {
            },
        });
        $("[data-product-id='" + productId + "']").remove();
    }

</script>
