@model AGDAR.Models.DTO.CategoryDto

@{
    ViewData["Title"] = "Create";
}

<h3>Dodaj Kategorię</h3>
<hr />
<div class="row justify-content-center">
    <div class="login-container">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="create-btns h-25" style="margin-top:122px">Powrót</a>
                <div class="form-group float-end " style="margin-top:120px">
                    <input type="submit" value="Zatwierdź" class="create-btns m-2" style="border:none;" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
